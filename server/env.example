# Database Configuration
# NEVER commit real credentials to version control!
# Use MySQL (Railway, PlanetScale, or Vercel Postgres)

# For Railway MySQL (Recommended for Vercel deployment)
DATABASE_URL=mysql://root:password@containers-us-west-123.railway.app:6543/railway

# For PlanetScale
# DATABASE_URL=mysql://username:password@aws.connect.psdb.cloud/dbname?ssl={"rejectUnauthorized":true}

# For Local MySQL
# DATABASE_URL=mysql://root:password@localhost:3306/swifttax

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-at-least-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here-make-it-long-and-random-at-least-32-characters
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Optional - for notifications)
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SWIFTTAX

# Tax Configuration
CURRENT_FINANCIAL_YEAR=2023-24
CURRENT_ASSESSMENT_YEAR=2024-25
ITR_FILING_DEADLINE=2025-11-30

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log